<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient.EscanerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digitalizar Documento"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Escáner con Cámara" />

        <ImageView
            android:id="@+id/imageViewScanned"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:background="#E0E0E0"
            android:contentDescription="Imagen escaneada" />

        <EditText
            android:id="@+id/editTextDocumentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título del documento (ej. Resultados de Sangre)"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewRecognizedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El texto del documento aparecerá aquí..."
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonSaveDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Documento"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>